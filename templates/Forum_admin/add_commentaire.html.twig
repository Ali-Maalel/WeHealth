{% extends 'Forum_admin/Forum_layout.html.twig' %}
{% block entete %}Ajouter un Commentaire {% endblock %}

{% block contenu %}

{{ form_start(form) }}
 <div class="form-group {{ form_errors(form.created_at) is not empty ? "has-error" : "has-success" }}">
    <label class="form-control-label" >{{ form_label(form.created_at) }}</label>
    {{ form_widget(form.created_at, {'attr': {'class': 'form-control {{ form_errors(form.created_at) is not empty ? "is-invalid" : "is-valid" }}'}}) }}
    <small class="form-text text-muted" id="emailHelp">{{ form_help(form.created_at) }}</small>
    <div class="form-control-feedback">{{ form_errors(form.created_at) }}</div>
</div>

<div class="form-group {{ form_errors(form.update_at) is not empty ? "has-error" : "has-success" }}">
    <label class="form-control-label" >{{ form_label(form.update_at) }}</label>
    {{ form_widget(form.update_at, {'attr': {'class': 'form-control {{ form_errors(form.update_at) is not empty ? "is-invalid" : "is-valid" }}'}}) }}
    <small class="form-text text-muted" id="emailHelp">{{ form_help(form.update_at) }}</small>
    <div class="form-control-feedback">{{ form_errors(form.update_at) }}</div>
</div>

 <div class="form-group {{ form_errors(form.content) is not empty ? "has-error" : "has-success" }}">
    <label class="form-control-label" >{{ form_label(form.content) }}</label>
    {{ form_widget(form.content, {'attr': {'class': 'form-control {{ form_errors(form.content) is not empty ? "is-invalid" : "is-valid" }}'}}) }}
    <small class="form-text text-muted" id="emailHelp">{{ form_help(form.content) }}</small>
    <div class="form-control-feedback">{{ form_errors(form.content) }}</div>
</div>

<div class="tile-footer">
{{ form_row(form.save, { 'label': 'Save commentaire', 'attr': {'class': 'btn btn-primary'} }) }}

</div>

{{ form_end(form) }}

 {% endblock %}


