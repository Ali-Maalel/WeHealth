{% extends 'base.html.twig' %}



{% block body %}
<div>
{% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}
    <div>
    {{ form_start(form) }}
        <div>{{ form_widget(form.login, { 'attr': { 'class': 'form-control' } }) }}</div>
        <div>{{ form_widget(form.password, { 'attr': { 'class': 'form-control' } }) }}</div>
        <div>{{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}</div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
