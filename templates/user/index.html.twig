{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('assets/css/adminusers.css') }}">
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Typeuser</th>
                <th>IsBlocked</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.typeuser }}</td>
                <td>{{ user.blocked }}</td>
                <td>
                    <a class="user_show" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>
                    <a class="user_edit" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
                    <a class="user_blockUser" href="{{ path('app_user_blockUser', {'id': user.id}) }}">Block</a>
                    <a class="user_unblockUser" href="{{ path('app_user_unblockUser', {'id': user.id}) }}">unBlock</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
