{% extends 'base.html.twig' %}

{% block title %}Medicaments index{% endblock %}

{% block body %}
    <h1>Medicaments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mode_utilisation</th>
                <th>Type_medicaments</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td>{{ medicament.id }}</td>
                <td>{{ medicament.name }}</td>
                <td>{{ medicament.modeUtilisation }}</td>
                <td>{{ medicament.typeMedicaments }}</td>
                <td>
                    <a href="{{ path('app_medicaments_show', {'id': medicament.id}) }}">show</a>
                    <a href="{{ path('app_medicaments_edit', {'id': medicament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medicaments_new') }}">Create new</a>
{% endblock %}
