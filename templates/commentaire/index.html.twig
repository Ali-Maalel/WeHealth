{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
<div class="container">
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_parent</th>
                <th>Created_at</th>
                <th>Update_at</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.idParent }}</td>
                <td>{{ commentaire.createdAt|date("m/d/Y") }}</td>
                <td>{{ commentaire.updateAt|date("m/d/Y") }}</td>
                <td>{{ commentaire.content }}</td>
                
                <td>
                <ul class="blog-info-link">
                    <li><a href="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}">Delete</a></li>
                    <li><a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">Edit</a></li>
                 
                    </ul>
                    
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
    </div>
{% endblock %}
