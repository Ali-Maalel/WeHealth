{% extends 'base.html.twig' %}

{% block title %}Discussion{% endblock %}

{% block body %}
    <h1>Discussion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discussion.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ discussion.contenu }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ discussion.sender }}</td>
            </tr>
            <tr>
                <th>Receiver</th>
