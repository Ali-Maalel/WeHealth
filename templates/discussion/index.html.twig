{% extends 'base.html.twig' %}

{% block title %}Discussion index{% endblock %}

{% block body %}
    <h1>Discussion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Sender</th>
                <th>Receiver</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discussion in discussions %}
            <tr>
                <td>{{ discussion.id }}</td>
                <td>{{ discussion.contenu }}</td>
                <td>{{ discussion.sender }}</td>
                <td>{{ discussion.receiver }}</td>
                <td>{{ discussion.date ? discussion.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a color="black" href="{{ path('app_discussion_show', {'id': discussion.id}) }}">show</a>
                    <a href="{{ path('app_discussion_edit', {'id': discussion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_discussion_new') }}">Create new</a>
{% endblock %}
