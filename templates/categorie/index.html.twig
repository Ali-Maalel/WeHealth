{% extends 'baseadmin.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}

	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger text-center">
			{{ message }}
		</div>
        {% endfor %}
		<div class="col-md-12" style="margin-top: 20px;">
			<div class="tile">
				<a class="btn btn-primary float-right" href="{{ path('app_categorie_new') }}">Create new</a>
				<div class="table-responsive">
					<table class="table" style="width: 70%; margin: 0 auto;">
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>actions</th>
							</tr>
						</thead>


					</thead>
					<tbody>
						{% for categorie in categories %}
							<tr>
								<td>{{ categorie.id }}</td>
								<td>{{ categorie.nom }}</td>


								<td>
									<a class="btn btn-primary" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
									{% include 'categorie/_delete_form.html.twig' with {'id': categorie.id} %}
								</td>

							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>


			{% endblock %}
