{% extends 'baseadmin.html.twig'%}
{% block body%}
	<main class="app-content">
		<div class="app-tile">
			<div>
				<h1>
					<i class="fa fa-edit"></i>
					Cr√©er un article</h1>
			</div>
			<ul class="app-breadcrumb breadcrumb">
				<li class="breadcrumb-item">
					<i class="fa fa-home fa-lg"></i>
				</li>
				<li class="breadcrumb-item">Forms</li>
				<li class="breadcrumb-item">
					<a href="#">Form Components</a>
				</li>
			</ul>
		</div>
		<div class="row justify-content-center ">
			<div class="col-md-8">
				<div class="tile mt-3">
					<div class="row">
						<div class="col-lg-6">
							{{ form_start(form) }}
							<div class="form-group">
								<label for="exampleInputEmail1">Titre</label>
								{{form_widget(form.Titre,{'attr':{'class':'form-control','id':'exampleInputEmail1'}})}}
							</div>
							<div class="form-group">
								<label for="exampleInputPassword1">featuredText</label>
								{{form_widget(form.featuredText,{'attr':{'class':'form-control', 'id':'exampleInputPassword1'}})}}
							</div>
							<div class="form-group">
								<label for="exampleSelect1">Contenu</label>
								{{form_widget(form.Contenu,{'attr':{'class':'form-control'}})}}
							</div>

							<div class="form-group">
								<label for="exampleSelect1">categorie</label>
								{{form_widget(form.categorie,{'attr':{'class':'form-control'}})}}
							</div>
							<div class="form-group">
								<label for="exampleSelect1">featuredImage</label>
								{{form_widget(form.featuredImage,{'attr':{'class':'form-control'}})}}
							</div>
						</div>
					</div>
				</div>
				<div class="tile-footer">
					<button class="btn btn-primary">{{ button_label|default('ajouter') }}</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</main>
{% endblock %}
