{% extends 'base.html.twig' %}

{% block title %}
	{{article.titre}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="article-title">{{ article.titre }}</h1>

		<hr>

		<div class="article-content">
			{{ article.contenu|raw }}
		</div>
		<h2 class="comments-title mt-5">
			<span id="comment-count">{{ article.comments|length }}</span>
			commentaire(s)</h2>


	{% endblock %}
