{% extends 'base.html.twig' %}

{% block title %}Liste des Topic {% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des Topic</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for topic in topics %}
            <tr>
                <td>{{ topic.id }}</td>
                <td>{{ topic.slug }}</td>
                <td>{{ topic.libelle }}</td>
                <td>
                    <a href="{{ path('app_topic_show', {'id': topic.id}) }}">show</a>
                    <a href="{{ path('app_topic_edit', {'id': topic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_topic_new') }}">Create new</a>
</div>
{% endblock %}
